@page
@model BusinessTrips.WebApp.Pages.Trips.IndexModel

@{
    ViewData["Title"] = "Trip Index";
}

<h1>@Html.DisplayNameFor(model => model.Trips)</h1>

<p>
    <a asp-page="Create"><i class="far fa-plus-square"></i> New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trips[0].Date)
            </th>
            <th>
                @Model.StartDisplayName
            </th>
            <th>
                @Model.DestinationDisplayName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trips[0].Distance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trips)
        {
            <tr>
                <td>
                    @(item.Date.ToString("dd.MM.yyyy"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Persons.FirstOrDefault(p => p.Address == item.StartAddress).Name.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Persons.FirstOrDefault(p => p.Address == item.DestinationAddress).Name.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distance)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TripId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TripId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TripId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
