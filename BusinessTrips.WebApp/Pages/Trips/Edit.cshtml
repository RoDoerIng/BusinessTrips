@page
@model BusinessTrips.WebApp.Pages.Trips.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trip.TripId" />
            <div class="form-group">
                <label asp-for="Trip.Date" class="control-label"></label>
                <input asp-for="Trip.Date" class="form-control" />
                <span asp-validation-for="Trip.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.Distance" class="control-label"></label>
                <input asp-for="Trip.Distance" class="form-control" />
                <span asp-validation-for="Trip.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trip.StartAddress" class="control-label"></label>
            <select asp-for="StartPersonId" asp-items="Model.NameOptions" class="form-control">
                <option value="">-- Select Start Address --</option>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Trip.DestinationAddress" class="control-label"></label>
                <select asp-for="DestinationPersonId" asp-items="Model.NameOptions" class="form-control">
                    <option value="">-- Select Destination Address --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
