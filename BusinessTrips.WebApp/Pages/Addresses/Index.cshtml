@page
@model BusinessTrips.WebApp.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Address Index";
}

    <h1>@Html.DisplayNameFor(model => model.Addresses)</h1>

<p>
    <a asp-page="Create"><i class="far fa-plus-square"></i> New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].PostCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Addresses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AddressId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AddressId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
